{
  "name": "to-unicode",
  "version": "0.0.1",
  "description": "Converts character to Hex Unicode",
  "main": "to-unicode.js",
  "scripts": {
    "ts-build": "tsc --build",
    "ci-test": "jest --coverage",
    "ci-build": "npm run ts-build && npm run ci-test",
    "ci-watch": "jest --coverage --watchAll",
    "py-serve": "python3 -m http.server --bind localhost 8080"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "jsdom",
    "roots": [
      "__tests__"
    ],
    "collectCoverageFrom": [
      "to-unicode.js"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      },
      "to-unicode.js": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "coverageReporters": [
      "text"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/javascript-utilities/character-to-unicode.git"
  },
  "keywords": [
    "string",
    "convert",
    "unicode"
  ],
  "author": "S0AndS0",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/javascript-utilities/character-to-unicode/issues"
  },
  "homepage": "https://github.com/javascript-utilities/character-to-unicode#readme",
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "jest": "^27.4.4",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  }
}
